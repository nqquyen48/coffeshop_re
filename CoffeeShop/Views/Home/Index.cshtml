@model IEnumerable<CoffeeShop.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!-- Hero Section -->
<section data-bs-version="5.1" class="header18 cid-tsEQyIZRcx mbr-fullscreen mbr-parallax-background" id="header18-1"
         style="padding-top: 80px;">
    <div class="mbr-overlay"
         style="opacity:0.9; background-image: url('https://images.unsplash.com/photo-1580933073521-dc49ac0d4e6a?auto=format&fit=crop&w=1600&q=80'); background-size: cover; background-position: center;">
    </div>
    <div class="mbr-overlay" style="opacity: 0.7; background-color: rgb(0, 0, 0);"></div>

    <div class="align-center container position-relative text-center" style="z-index: 2;">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <h1 class="mbr-section-title mbr-fonts-style mbr-white mb-3 display-1">
                    <strong>The daily grind coffee house</strong>
                </h1>
                <p class="mbr-text mbr-fonts-style mbr-white display-7">
                    Where every cup is a fresh brew of perfection
                </p>
                <div class="mbr-section-btn mt-3">
                    <a class="btn btn-primary display-4" asp-controller="Products" asp-action="Shop">
                        <span class="mobi-mbri-shopping-bag mobi-mbri mbr-iconfont mbr-iconfont-btn"></span> Shop now
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Top Selling Section -->
<section data-bs-version="5.1" class="content2 cid-tsEQSCqggh" id="content2-2">
    <div class="container">
        <div class="mbr-section-head">
            <h4 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2">
                <strong>Top Selling</strong>
            </h4>
            <h5 class="mbr-section-subtitle mbr-fonts-style align-center mb-0 mt-2 display-5">
                Make your mornings better with our top-selling product.
            </h5>
        </div>
        <div class="row mt-4">
            @foreach (var item in Model)
            {
                <div class="item features-image col-12 col-md-6 col-lg-4 mb-4">
                    <div class="item-wrapper p-3 shadow-sm bg-white rounded-3 h-100">
                        <div class="item-img mb-3 text-center">
                            <img src="@item.ImageUrl" alt="@item.Name" class="img-fluid rounded">
                        </div>
                        <div class="item-content text-center">
                            <h6 class="item-subtitle mbr-fonts-style display-7">
                                <strong>@item.Name</strong>
                            </h6>
                            <p class="mbr-text mbr-fonts-style mt-2 display-7">@item.Price.ToString("C")</p>
                        </div>
                        <div class="mbr-section-btn item-footer text-center mt-3">
                            <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pId="@item.Id"
                               class="btn btn-primary display-4">
                                <span class="mobi-mbri-cart-add mobi-mbri mbr-iconfont mbr-iconfont-btn"></span> Add to cart
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
