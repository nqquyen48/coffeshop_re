@model IEnumerable<CoffeeShop.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row mt-4">
    @foreach (var item in Model)
    {
        <div class="item features-image col-12 col-md-6 col-lg-4">
            <div class="item-wrapper">
                <!-- Ảnh sản phẩm -->
                <div class="item-img">
                    <img src="@item.ImageUrl" alt="@item.Name" title="@item.Name" class="img-fluid" />
                </div>

                <!-- Thông tin sản phẩm -->
                <div class="item-content text-center mt-3">
                    <a asp-controller="Products" asp-action="Detail" asp-route-id="@item.Id">
                        <h6 class="item-subtitle mbr-fonts-style display-7">
                            <strong>@item.Name</strong>
                        </h6>
                    </a>
                    <p class="mbr-text mbr-fonts-style display-7">
                        @item.Price.ToString("C ")
                    </p>
                </div>

                <!-- Nút xem chi tiết -->
                <div class="mbr-section-btn item-footer text-center mt-2">
                    <a asp-controller="Products" asp-action="Detail" asp-route-id="@item.Id"
                       class="btn btn-primary display-4">
                        <span class="mbrib-cart-add mbr-iconfont mbr-iconfont-btn"></span>
                        View Detail
                    </a>
                </div>
            </div>
        </div>
    }
</div>
